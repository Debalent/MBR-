# MBR Records Platform Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mbr-records
DB_NAME=mbr-records

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@mbrrecords.com
FROM_NAME=MBR Records

# File Upload Configuration (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Firebase Configuration (for real-time features)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Redis Configuration (for session management and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_if_any

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Security Configuration
SESSION_SECRET=your_session_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
CORS_ORIGIN=http://localhost:3000

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Social Media API Keys
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# External Services
LAST_FM_API_KEY=your_lastfm_api_key
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Audio Processing
FFMPEG_PATH=/usr/bin/ffmpeg
MAX_FILE_SIZE=50MB
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,m4a,aac

# Content Delivery Network
CDN_URL=https://cdn.mbrrecords.com
ASSETS_URL=https://assets.mbrrecords.com

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_CHAT=true
ENABLE_DEMO_SUBMISSIONS=true
ENABLE_PAYMENTS=true
ENABLE_ANALYTICS=true
ENABLE_SOCIAL_FEATURES=true

# Admin Configuration
ADMIN_EMAIL=admin@mbrrecords.com
SUPER_ADMIN_SECRET=your_super_admin_secret

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=mbr-records-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Performance Configuration
CACHE_TTL=3600
MAX_CONCURRENT_UPLOADS=5
MAX_CONCURRENT_DOWNLOADS=10

# Development Tools
ENABLE_PLAYGROUND=true
ENABLE_DEBUG_LOGS=true
MOCK_EXTERNAL_SERVICES=false