{
  "name": "mbr-records-platform",
  "version": "1.0.0",
  "description": "Sophisticated Digital Record Label Platform with SoundCloud-inspired design",
  "main": "ServerApp/server.js",
  "scripts": {
    "start": "node ServerApp/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon ServerApp/server.js",
    "client": "cd ClientApp && npm start",
    "build": "cd ClientApp && npm run build",
    "install-client": "cd ClientApp && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "record-label",
    "music",
    "digital-platform",
    "soundcloud",
    "streaming",
    "artists",
    "demos"
  ],
  "author": "MBR Records",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "stripe": "^13.3.0",
    "socket.io": "^4.7.2",
    "nodemailer": "^6.9.4",
    "@sendgrid/mail": "^7.7.0",
    "firebase-admin": "^11.10.1",
    "joi": "^17.9.2",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.8.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.0.1",
    "crypto": "^1.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}